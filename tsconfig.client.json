{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "sourceMap": true,
	      "jsx": "react",
        "experimentalDecorators": true
    },
    "include": [
        "./src/client/**/*",
        "./src/shared/**/*"
    ],
    "exclude": [
        "./src/shared/config.ts"
    ]
}
